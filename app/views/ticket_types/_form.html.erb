  <!-- Create Ticket Type Form -->
  <%= form_for @ticket_type, url: event_ticket_types_path(event_id: @event.id), method: 'POST', html: { class: "form-horizontal" } do |f| %>

    <!-- display validation errors -->
    <% if @ticket_type.errors.present? %>
      <div class="alert alert-danger">
        <% @ticket_type.errors.messages.each do |key, value| %>
          <ul>
            <li>
              <%= key %>: <%= value.to_sentence %>
            </li>
          </ul>
        <% end %>
      </div>
    <% end %>

    <div class="form-group">
      <div class="col-lg-3">
        <%= f.label :name %>
      </div>
      <div class="col-lg-9">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-3">
        <%= f.label :price %>
      </div>
      <div class="col-lg-9">
        <%= f.number_field :price, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-3">
        <%= f.label :max_quantity %>
      </div>
      <div class="col-lg-9">
        <%= f.number_field :max_quantity, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-3"></div>
      <div class="col-lg-9">
        <%= f.submit nil, class: 'btn btn-primary', value: 'Add Ticket Type' %>
        &nbsp;
        <%= link_to 'Cancel', your_events_path, class: 'btn btn-secondary' %>
      </div>
    </div>

  <% end %>
