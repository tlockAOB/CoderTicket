<!-- Create Message Form -->
<%= form_for [@event, @ticket], html: { class: "form-horizontal" } do |f| %>

                    <!-- display validation errors -->
                    <% if @ticket.errors.present? %>
                      <div class="alert alert-danger">
                        <% @ticket.errors.messages.each do |key, value| %>
                          <ul>
                            <li>
                              <strong><%= key %></strong>: <%= value.to_sentence %>
                            </li>
                          </ul>
                        <% end %>
                      </div>
                    <% end %>

                    <!-- NAME -->
                    <div class="form-group">
                      <div class="col-lg-3">
                        <%= f.label :name %>
                      </div>
                      <div class="col-lg-9">
                        <%= f.text_field :name, class: 'form-control' %>
                      </div>
                    </div>

                    <!-- REGION -->
                    <div class="form-group">
                      <div class="col-lg-3">
                        <%= f.label :region_id %>
                      </div>
                      <div class="col-lg-9">
                        <%= f.collection_select(:region_id, Region.all, :id, :name, {:prompt=>true}, {:class=>'form-control'}) %>
                      </div>
                    </div>

                    <!-- ADDRESS -->
                    <div class="form-group">
                      <div class="col-lg-3">
                        <%= f.label :full_address %>
                      </div>
                      <div class="col-lg-9">
                        <%= f.text_area :full_address, rows: "4", class: 'form-control' %>
                      </div>
                    </div>


                    <div class="form-group">
                      <div class="col-lg-3"></div>
                      <div class="col-lg-9">

                        <% if @venue.new_record? %>
                          <%= f.submit nil, class: 'btn btn-primary', value: 'Create' %>
                        <% else %>
                          <%= f.submit nil, class: 'btn btn-primary', value: 'Update' %>
                        <% end %>
                        &nbsp;
                        <%= link_to 'Cancel', events_path, class: 'btn btn-secondary' %>
                      </div>
                    </div>

<% end %>


<%= form_tag event_tickets_path(event_id: @event.id) do %>
  <%= hidden_field_tag :ticket_type_id, value: type.id %>
  <td> <%= type.name %> </td>
  <td> <%= number_to_currency(type.price, unit: 'VND ', precision: 0) %> </td>
  <td> <%= select_tag(:quantity, options_for_select(0..10)) %> </td>
  <td> <%= submit_tag 'Buy Now', class: 'btn btn-success' %> </td>
<% end %>
